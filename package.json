{
	"scripts": {
		"type-check": "tsc --noEmit",
		"type-check:watch": "npm run type-check -- --watch",
		"build": "npm run build:types && npm run build:js",
		"bundle": "babel src --out-file bundle.js --extensions \".ts,.tsx\" --source-maps inline",
		"build:tsc": "npm run build:types && npm run build:test",
		"build:types": "tsc --emitDeclarationOnly",
		"build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
		"build:test": "babel src-og --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*",
		"react-native-reanimated": "*"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.4.0",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-numeric-separator": "^7.2.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.4.0",
		"@babel/preset-env": "^7.4.1",
		"@babel/preset-react": "^7.0.0",
		"@babel/preset-typescript": "^7.3.3",
		"@types/react-native": "^0.60.4",
		"babel-preset-expo": "^5.2.0",
		"typescript": "^3.3.3"
	},
	"dependencies": {
		"@types/react": "^16.9.1",
		"@types/react-dom": "^16.8.5",
		"react": "^16.9.0",
		"react-dom": "^16.9.0",
		"react-native": "https://github.com/expo/react-native/archive/sdk-34.0.0.tar.gz",
		"react-native-reanimated": "^1.2.0"
	},
	"name": "@nandorojo/shared-animations",
	"description": "A nimble global animtion-state management tool for react-native's `Animated` values. Think of it like a simple redux for react-native animation values.",
	"version": "1.0.21",
	"main": "lib/index.js",
	"homepage": "https://github.com/nandorojo/shared-animations",
	"repository": {
